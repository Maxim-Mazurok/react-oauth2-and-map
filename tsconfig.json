{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "build",
    "resolveJsonModule": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "target": "esnext",
    "baseUrl": "./",
    "paths": {
      "*": ["src/types/*"]
    },
    "noImplicitAny": true
  },
  "include": ["src", "test"]
}
